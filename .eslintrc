extends:
  eslint-config-airbnb

parser:
  babel-eslint

plugins:
  - babel
  - react
  - promise

settings:
  ecmascript: 7

env:
  browser: true
  jest: true

rules:
  semi: 0
  react/jsx-filename-extension: 0
  react/jsx-wrap-multilines: 0
  react/jsx-closing-tag-location: 0
  arrow-body-style: [2, "as-needed", { "requireReturnForObjectLiteral": false }]
  arrow-parens: [2, "as-needed", { "requireForBlockBody": false }]
  import/extensions: 0
  import/no-unresolved: 0
  indent: ["error", 2, { "SwitchCase": 0 }]
  max-len: ["error", { "code": 120 }]
  object-curly-newline: ["error", {
    "ObjectExpression": { "consistent": true, "multiline": true, "minProperties": 8 },
    "ObjectPattern": { "multiline": true, "minProperties": 8 },
    "ImportDeclaration": { "multiline": true, "minProperties": 8 },
    "ExportDeclaration": { "multiline": true, "minProperties": 8 }
  }]
