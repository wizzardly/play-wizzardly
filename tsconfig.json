{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "outDir": "./compile/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.js"
  ]
}
